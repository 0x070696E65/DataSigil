<?xml version="1.0" encoding="utf-8" ?>
<Border
    x:Class="DataSigil.Controls.RoundedCornerImage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:DataSigil.Converters"
    x:Name="Root"
    Margin="-2"
    Padding="0"
    HorizontalOptions="{OnIdiom Phone='FillAndExpand',
                                Tablet='CenterAndExpand',
                                Desktop='CenterAndExpand'}">
    <Image Aspect="{OnIdiom Phone='AspectFill', Desktop='AspectFit', Tablet='AspectFit'}" Source="{Binding Source, Source={x:Reference Root}}" />
</Border>